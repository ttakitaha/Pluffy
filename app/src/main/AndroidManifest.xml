        android:icon="@mipmap/ic_launcher_p"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <meta-data
            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-2916081203297616~2694224833" />

        <activity android:name="com.takhero.takit.pluffy.SplashActivity"
            android:screenOrientation="portrait"
            android:configChanges="keyboardHidden|orientation|screenSize">

            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.takhero.takit.pluffy.BasicActivity" />
        <activity android:name="com.takhero.takit.pluffy.OptionsActivity" />
        <activity android:name="com.takhero.takit.pluffy.GameModesActivity" />
        <activity android:name="com.takhero.takit.pluffy.AdventureActivity" />
        <activity android:name="com.takhero.takit.pluffy.ActionActivity" />
        <activity android:name="com.takhero.takit.pluffy.MainActivity" />
        <activity android:name="com.takhero.takit.pluffy.EndlessActivity" />
        <activity android:name="com.takhero.takit.pluffy.CreditsActivity" />
        <activity android:name="com.takhero.takit.pluffy.HowToPlayActivity" />
        <activity android:name="com.takhero.takit.pluffy.IntroActivity"></activity>
    </application>

</manifest>